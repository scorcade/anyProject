<Window x:Class="textBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:textBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF96B6E2">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="178,182,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="157" Height="37" TextChanged="textBox_TextChanged_1" BorderThickness="10,1,1,1" />
        <Button x:Name="buttonShow" Content="show" HorizontalAlignment="Left" Margin="178,242,0,0" VerticalAlignment="Top" Click="buttonShow_Click" Height="49" Width="49"/>
        <Button x:Name="buttonHide" Content="hide" HorizontalAlignment="Left" Margin="284,242,0,0" VerticalAlignment="Top" Click="buttonHide_Click"  Height="49" Width="49"/>

    </Grid>
</Window>
